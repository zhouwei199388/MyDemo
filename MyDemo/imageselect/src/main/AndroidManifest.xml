<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.harsom.delemu">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true">
        <activity
            android:name=".album.AlbumActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/album_activity_title"
            android:screenOrientation="portrait"
            android:theme="@style/AlbumTheme" />
        <activity
            android:name=".album.AlbumDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AlbumTheme" />
        <activity
            android:name=".crop.CropActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AlbumTheme"
            android:screenOrientation="portrait" />
        <activity
            android:name=".album.ImagePreviewActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".batchimport.BatchImportActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AlbumTheme" />
    </application>
</manifest>
